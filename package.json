{
  "name": "nhl-dashboard",
  "version": "1.0.0",
  "private": true,
  "description": "NHL Dashboard with Multi-Sport Support",
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @nhl-dashboard/api dev & pnpm --filter @nhl-dashboard/web dev",
    "dev:api": "pnpm --filter @nhl-dashboard/api dev",
    "dev:web": "pnpm --filter @nhl-dashboard/web dev",
    "build": "pnpm -r build",
    "build:types": "pnpm --filter @nhl-dashboard/types build",
    "build:api": "pnpm --filter @nhl-dashboard/api build",
    "build:web": "pnpm --filter @nhl-dashboard/web build",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @nhl-dashboard/api test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bbeierle12/Sports-Tracker.git"
  },
  "author": "",
  "license": "MIT"
}
