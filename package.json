{
  "name": "sports-stats-api",
  "version": "1.0.0",
  "private": true,
  "description": "Sports Stats API - Multi-Sport Dashboard",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @sports-stats-api/api dev & pnpm --filter @sports-stats-api/web dev",
    "dev:api": "pnpm --filter @sports-stats-api/api dev",
    "dev:web": "pnpm --filter @sports-stats-api/web dev",
    "build": "pnpm -r build",
    "build:types": "pnpm --filter @sports-stats-api/types build",
    "build:api": "pnpm --filter @sports-stats-api/api build",
    "build:web": "pnpm --filter @sports-stats-api/web build",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @sports-stats-api/api test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bbeierle12/Sports-Tracker.git"
  },
  "author": "",
  "license": "MIT"
}
